{
  "name": "functions",
  "scripts": {
    "clean": "rimraf lib/*",
    "copy-assets": "ts-node src/tools/copyAssets",
    "dev:build": "npm-run-all clean build copy-assets",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "tsc -w | firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run env && firebase deploy --only functions",
    "env": "test -f env.json && firebase functions:config:unset env && node setEnv.js",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "inversify": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "moment": "^2.29.1",
    "mongoose": "^5.12.14",
    "nodemailer": "^6.6.2",
    "nodemailer-mailgun-transport": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "uninstall": "^0.0.0",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/ejs": "^3.0.6",
    "@types/fs-extra": "^9.0.11",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mailgun-js": "^0.22.11",
    "@types/nodemailer": "^6.4.2",
    "@types/nodemailer-mailgun-transport": "^1.4.2",
    "@types/request": "^2.48.5",
    "@types/shelljs": "^0.8.8",
    "@types/validatorjs": "^3.15.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "fs-extra": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.4",
    "ts-node": "^10.0.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
